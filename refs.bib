file = {:C$\backslash$:/Users/Usuario/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Linares, Camarero, Carreira - 2009 - Interacting effects of changes in climate and forest cover on mortality and growth of the southernm.pdf:pdf},
issn = {1466-822X},
journal = {Global Ecology and Biogeography},
keywords = {Abies pinsapo,Spain,aerial photographs,climate warming,dendroecology,drought,forest decline,relict species},
month = {jul},
pages = {485--497},
