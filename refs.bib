file = {:C$\backslash$:/Users/Usuario/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Bellassen et al. - 2011 - Reconstruction and attribution of the carbon sink of European forests between 1950 and 2000.pdf:pdf},
