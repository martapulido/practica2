file = {:C$\backslash$:/Users/Usuario/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/McIntyre et al. - 2015 - Twentieth-century shifts in forest structure in California Denser forests, smaller trees, and increased dominan.pdf:pdf},
journal = {Proceedings of the National Academy of Sciences},
month = {feb},
pages = {1458--1463},
title = {{Twentieth-century shifts in forest structure in California: Denser forests, smaller trees, and increased dominance of oaks}},
volume = {112},
year = {2015}
