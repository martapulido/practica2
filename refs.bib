doi = {10.1111/j.1600-0706.2011.19372.x},
file = {:C$\backslash$:/Users/Usuario/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Lloret, Keeling, Sala - 2011 - Components of tree resilience Effects of successive low-growth episodes in old ponderosa pine forests.pdf:pdf},
