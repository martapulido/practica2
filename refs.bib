pages = {53--63},
title = {{Elevated CO{\textless}sub{\textgreater}2{\textless}/sub{\textgreater} stimulates net accumulations of carbon and nitrogen in land ecosystems: A meta-analysis}},
volume = {87},
year = {2006}
}
