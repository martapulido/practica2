author = {G{\'{o}}mez-Aparicio, Lorena and Garc{\'{i}}a-Vald{\'{e}}s, Ra{\'{u}}l and Ruiz-Benito, Paloma and Zavala, Miguel A},
doi = {10.1111/j.1365-2486.2011.02421.x},
issn = {1354-1013},
journal = {Global Change Biology},
keywords = {Iberian Peninsula,Mediterranean forests,climate change,competitive effect,competitive response,maximum likelihood,neighhorbood models,species rank reversals,tree coexistence},
month = {jul},
pages = {2400--2414},
publisher = {John Wiley {\&} Sons, Ltd (10.1111)},
title = {{Disentangling the relative importance of climate, size and competition on tree growth in Iberian forests: implications for forest management under global change}},
